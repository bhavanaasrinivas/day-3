#include<stdio.h>
struct sum{
     float a;
     float b;
     float r;
};
struct sum s; 
struct sum input()
{
    printf("enter two decimal values");
    scanf("%f%f",&s.a,&s.b);
    return s;
}
struct sum compute()
{
    s.r=s.a+s.b;
    return s;
}
struct sum output()
{
    printf("the sum of the values entered is %f",s.r);
    return s;
}
int main()
{
    struct sum s;
    input();
    compute();
    output();
}
***************************************************************************************************************************************
#include <stdio.h>
struct sum{
    int a;
    int b;
    int max;
    int min;
};
struct sum s;
struct sum input()
{
    printf("enter two numbers");
    scanf("%d%d",&s.a,&s.b);
    return s;
}
struct sum compute()
{
    if(s.a>s.b)
    {
        s.max=s.a;
        s.min=s.b;
    }
    else if(s.b>s.a)
    {
        s.max=s.b;
        s.min=s.a;
    }
    return s;
}
struct sum output()
{
    if(s.max!=s.min)
    {
    printf("%d is greater than %d ",s.max,s.min);
    }
    else
    printf("both are equal");
    return s;
}
int main()
{
    struct sum s;
    input();
    compute();
    output();
}
